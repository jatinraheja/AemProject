<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
   jcr:primaryType="nt:unstructured"
   sling:resourceType="cq/gui/components/authoring/dialog">

   <content
       jcr:primaryType="nt:unstructured"
       sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType = "nt:unstructured">
         <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
             <text
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Text"
                    name="./text3"/>
            <selectBox
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Designation"
                    name="./designation">
               <items jcr:primaryType = "nt:unstructured">
                       <a jcr:primaryType="nt:unstructured" text="Student" value="Student"/>
                       <b jcr:primaryType="nt:unstructured" text="Professor" value="Professor"/>
                       <c jcr:primaryType="nt:unstructured" text="HOD" value="HOD"/>
               </items>
            </selectBox>
             <radioGroup jcr:primaryType="nt:unstructured"
                 name="./selected"
                 text="Select an option"
                 sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup">
                 <items jcr:primaryType="nt:unstructured">
                  <radioMale jcr:primaryType="nt:unstructured"
                             text="Male"
                             value="Male"/>
                     <radioFemale jcr:primaryType="nt:unstructured"
                                text="Female"
                                value="Female"/>

                 </items>


             </radioGroup>

            </items>


         </column>


      </items>


   </content>
</jcr:root>
